<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://dubbo.apache.org/schema/dubbo
       http://dubbo.apache.org/schema/dubbo/dubbo.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">
    <context:property-placeholder/>

    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <dubbo:registry address="nacos://127.0.0.1:8848?registry-type=service" id="nacosRegistry"/>

    <!-- 和本地bean一样实现服务 -->
    <bean id="demoService" class="com.js.service.DemoServiceImpl"/>



    <dubbo:provider registry="nacosRegistry">
        <!-- 声明需要暴露的服务接口 -->
        <dubbo:service interface="com.js.api.DemoService" ref="demoService"/>
    </dubbo:provider>
</beans>