<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://dubbo.apache.org/schema/dubbo
       http://dubbo.apache.org/schema/dubbo/dubbo.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">
    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="-1" />

    <dubbo:registry address="nacos://127.0.0.1:8848?registry-type=service" id="nacosRegistry" group="cloud-dubbo-provider"
                    use-as-metadata-center="false" use-as-config-center="false" protocol="dubbo"/>
    <dubbo:application name="cloud-dubbo-provider" qos-port="22222" qos-enable="true" protocol="dubbo"/>

    <dubbo:consumer registry="nacosRegistry" check="true">
        <!-- 生成远程服务代理，可以和本地bean一样使用 sayHelloService -->
        <dubbo:reference id="sayHelloService" interface="com.js.api.ISayHelloService"/>
    </dubbo:consumer>

</beans>