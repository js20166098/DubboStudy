<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://dubbo.apache.org/schema/dubbo
       http://dubbo.apache.org/schema/dubbo/dubbo.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">
    <context:property-placeholder/>
    <dubbo:application name="dubbo-server"/>
    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <dubbo:registry address="nacos://127.0.0.1:8848?registry-type=service" port="20880" timeout="1000000" id="nacosRegistry"/>

    <!-- 和本地bean一样实现服务 -->
    <bean id="loginService" class="com.js.service.LoginServiceImpl"/>
    <dubbo:provider registry="nacosRegistry">
        <!-- 声明需要暴露的服务接口 -->
        <dubbo:service interface="com.js.api.ILoginService" ref="loginService"/>
    </dubbo:provider>


</beans>