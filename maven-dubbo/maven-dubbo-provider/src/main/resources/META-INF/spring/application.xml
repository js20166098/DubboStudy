<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://dubbo.apache.org/schema/dubbo
       http://dubbo.apache.org/schema/dubbo/dubbo.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">
    <context:property-placeholder/>
    <dubbo:application name="dubbo-server"/>
    <!--不需要注册到服务注册中心-->
    <!--<dubbo:registry address="zookeeper://192.168.216.128:2181" timeout="10000"/>-->

    <dubbo:registry address="zookeeper://127.0.0.1:2181" port="20881" timeout="1000000"/>

    <dubbo:protocol name="dubbo" port="20880"/>

    <dubbo:service interface="com.js.api.ILoginService" ref="loginService"/>

    <bean id="loginService" class="com.js.service.LoginServiceImpl"/>


</beans>